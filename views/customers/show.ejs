<% layout('layouts/boilerplate') %>



<div class="row align-items-center justify-content-center">
    <div class="py-5 col-6 align-items-center justify-content-center">
        <div class="card" style="">
            <div class="card-body">
                <h5 class="card-title"><%=inventory.firstName%> <%=inventory.lastName%></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%=inventory.city%> <%=inventory.state%>
                    <%=inventory.zipcode%>
                </h6>
                <p class="card-text">Here is a list of <%= inventory.firstName%>'s belongings:</p>


                <ul class="list-group list-group-flush">
                    <% for (let item of inventory.inventory) { %>
                    <li class="list-group-item"><%= item.inventoryName%>:$<%= item.inventoryValue%></li>
                    <% } %>
                </ul>

                <div class="card-footer">
                    <form class="card-link ml-5 pl-5 d-inline" action="/customer/<%=inventory._id%>/edit">
                        <button class="card-link btn btn-warning d-inline">Edit This Inventory</button>
                    </form>


                    <form class="card-link ml-5 pl-5 d-inline" action="/customer/<%=inventory._id%>/?_method=DELETE"
                        method="post">
                        <button class="card-link btn btn-danger d-inline">Delete This Inventory</button>
                    </form>

                </div>

            </div>
        </div>

    </div>
</div>